<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AnalisisActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9AFFFFFF"
            android:paddingBottom="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/green_3E8E7E"
                android:paddingBottom="@dimen/_20sdp"
                android:id="@+id/cl_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="IRCAL-BOP"
                    android:textSize="@dimen/_16sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/white"
                    android:padding="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:background="@drawable/logo_background"
                    app:layout_constraintRight_toRightOf="parent">
                    <ImageView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/pupr_logo"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_top"
                android:id="@+id/cl_mid">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_analisis"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Analisis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analisis Bangunan"
                    android:id="@+id/tv_analisis_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_analisis"/>

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_pertama_table_1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_analisis_1" />

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_pertama_table_2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_pertama_table_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/analisis_pertama_result"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_pertama_table_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analisis Tabel"
                    android:id="@+id/tv_analisis_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_pertama_result"/>

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_kedua_table_1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_analisis_2" />

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_kedua_table_2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_kedua_table_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/analisis_kedua_result"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_kedua_table_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analisis Regresi"
                    android:id="@+id/tv_analisis_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_kedua_result"/>

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_ketiga_regresi"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_analisis_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/analisis_regresi_result"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_ketiga_regresi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_ketiga_table_1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_regresi_result" />

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_ketiga_table_2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_ketiga_table_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/analisis_ketiga_result"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_ketiga_table_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/analisis_result"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_ketiga_result"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cl_bottom"
                app:layout_constraintTop_toBottomOf="@id/cl_mid">

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_result_table_1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.levitnudi.legacytableview.LegacyTableView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analisis_result_table_2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/analisis_result_table_1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cl_chart"
                app:layout_constraintTop_toBottomOf="@id/cl_bottom">

                <com.anychart.AnyChartView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:id="@+id/chart"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:backgroundTint="@color/green_3E8E7E"
                android:text="Next"
                android:id="@+id/btn_next"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_chart"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:backgroundTint="@color/green_3E8E7E"
                android:text="Save PDF"
                android:id="@+id/btn_save"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_next"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>