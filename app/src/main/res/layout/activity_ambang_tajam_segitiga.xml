<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AmbangTajamSegitigaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/data_informasi_bottom_corner"
        android:paddingBottom="10dp"
        android:id="@+id/cl_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="IRCAL-BOP"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#000000"
            android:padding="10dp" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pupr_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_app"
        app:layout_constraintTop_toBottomOf="@+id/cl_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9AFFFFFF"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ats"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Ambang Tajam Segitiga" />

            <com.levitnudi.legacytableview.LegacyTableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ats_table"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_ats" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mencari muka air reaktif"
                android:id="@+id/tv_reaktif"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ats_table"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_reaktif"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_q"
                android:text="Rumus ="
                android:textSize="14sp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:id="@+id/iv_rumus_reaktif"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ats_rumus_reaktif"
                app:layout_constraintLeft_toRightOf="@+id/tv_q"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_q"
                app:layout_constraintBottom_toBottomOf="@+id/tv_q"/>

            <com.levitnudi.legacytableview.LegacyTableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ats_reaktif"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_rumus_reaktif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mencari Nilai Cd"
                android:id="@+id/tv_cd"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ats_reaktif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_cd"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_cd_rumus"
                android:text="Rumus Cd = Berdasarkan Tabel"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <com.levitnudi.legacytableview.LegacyTableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ats_cd"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_cd_rumus" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/ats_cd"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_cd_penuh"
                android:text="Mencari nilai Cd Jika 90Â° dan kontraksi penuh"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_cd_penuh"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_cd_penuh_rumus"
                android:text="Rumus Cd = Berdasarkan Tabel"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <com.levitnudi.legacytableview.LegacyTableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ats_cd_penuh"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_cd_penuh_rumus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit"
                android:id="@+id/tv_debit"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ats_cd_penuh"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_debit"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_rumus_debit"
                android:text="Rumus Debit ="
                android:textSize="14sp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="55dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_rumus_debit"
                android:id="@+id/iv_rumus_debit"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ambang_tajam_segitiga"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_rumus_debit"
                app:layout_constraintBottom_toBottomOf="@+id/tv_rumus_debit"/>

            <com.levitnudi.legacytableview.LegacyTableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ats_debit"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_rumus_debit" />

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@null"
                android:backgroundTint="#3F51B5"
                android:text="Next"
                android:id="@+id/btn_next"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/ats_debit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>