<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/data_informasi_bottom_corner"
        android:paddingBottom="10dp"
        android:id="@+id/cl_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="m-KLAUDE"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#000000"
            android:padding="10dp" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil Kalibrasi Bangunan Ukur Debit Di Daerah Irigasi"
                android:id="@+id/tv_title"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Bangunan:"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_nama_bangunan" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintLeft_toRightOf="@+id/tv_nama_bangunan"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_nama_bangunan_value" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Kalibrasi:"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama_bangunan"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_tanggal_kalibrasi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Kalibrasi:"
                app:layout_constraintTop_toBottomOf="@+id/tv_tanggal_kalibrasi"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_metode_kalibrasi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_metode_kalibrasi"
                android:layout_marginLeft="50dp"
                android:id="@+id/tv_detail"
                android:text="a)acuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rumus Debit Kalibrasi"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail"
                android:id="@+id/tv_rumus_debit"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_detail_rumus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_rumus_debit"
                app:layout_constraintTop_toTopOf="@+id/tv_rumus_debit" />

            <TextView
                android:id="@+id/tv_detail_rumus_n1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_detail_rumus1"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_rumus1" />

            <TextView
                android:id="@+id/tv_detail_rumus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_rumus_debit"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_rumus1" />

            <TextView
                android:id="@+id/tv_detail_rumus_n2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_detail_rumus2"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_rumus2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_rumus2"
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_lengkung_debit"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_lengkung_debit"
                android:id="@+id/tv_tabel_debit" />

            <com.levitnudi.legacytableview.LegacyTableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/q_table1"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_tabel_debit" />

            <com.levitnudi.legacytableview.LegacyTableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/q_table2"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/q_table1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>