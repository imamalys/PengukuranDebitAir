<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cl_top"
            android:background="@drawable/main_menu_bottom_corner"
            android:paddingBottom="70dp">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:id="@+id/iv_top_left"
                android:src="@drawable/logo_app"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:background="@drawable/logo_background"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/pupr_logo"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@+id/iv_top_left"
                app:layout_constraintRight_toRightOf="@id/iv_top_left"
                app:layout_constraintTop_toBottomOf="@id/iv_top_left"
                android:text="IRCAL-BOP"
                android:textSize="@dimen/_14ssp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_tipe_bangunan"
            android:translationY="-50dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_top"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:translationY="-50dp"
            android:visibility="gone"
            android:id="@+id/cl_rv_riwayat"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/green_3E8E7E"
            app:layout_constraintTop_toBottomOf="@+id/rv_tipe_bangunan"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Data"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@color/white"
                android:id="@+id/rv_riwayat"
                android:paddingBottom="@dimen/_10sdp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_min="@dimen/_150sdp"
            app:layout_constraintHeight_max="@dimen/_250sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:translationY="-50dp"
            android:id="@+id/cl_no_riwayat"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/green_3E8E7E"
            app:layout_constraintTop_toBottomOf="@+id/rv_tipe_bangunan"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Data"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_riwayat"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/white"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/tv_riwayat"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/no_report_icon"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_22ssp"
                        android:text="Tidak ada data"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>